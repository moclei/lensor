{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}